@using TheaterDeKoning.DataBase

@model List<Voorstelling>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="TitleTekst">
        <h2>Bij Theater de Koning is het altijd gezellig</h2>
        <p>
            Welkom bij onze theater website.
            Receptie open tussen:
            15:00 - 24:00
            dinsdag - zondag
            Beatrixstraat 82 2220WA
        </p>
    </div>
    <img class=Image1 src="~/Images/image1.png" alt="Theater" />
</div>

<h4> Opkomende Voorstellingen</h4>
<div class="flex-container">
    @foreach (var Voorstelling in Model)
    {<div class="poster">
        <a>
            @Voorstelling.naam
        </a>

        @Voorstelling.datum;

        <p id="Tijdvak">@Voorstelling.Tijdvak</p>
        </div>  
    }

    <div class="poster">
        <img class="Poster_image" src="~/Images/LionKing.png" />
        <p2>The Lion King</p2>
    </div>

    <div class="poster">
        <img class="Poster_image" src="~/Images/Titanic.png" />
    </div>

</div>

<style>
    .article {
        margin: 0;
        margin-right: 0;
    }
</style>

<script>
    const element = document.getElementById("Tijdvak");
    if (element.innerHTML = "1")
    {element.innerHTML = "18:00 - 21:00";}
    else
    {element.innerHTML = "22:00 - 24:00";}
</script> 